    margin-bottom: 1rem;
}

.dt-buttons .btn {
    margin-right: 0.5rem;
}

/* User avatar styles */
.user-avatar {
    width: 40px;
    height: 40px;
    object-fit: cover;
}

.user-avatar-placeholder {
    width: 40px;
    height: 40px;
    font-size: 16px;
}

