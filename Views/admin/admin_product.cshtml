<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
@* <script src="~/js/table2excel.js"></script> *@

<script>
    var $tbody = $('#body');

    $(document).ready(function () {
        var $spinner = $('<div class="spinner"><div class="d-flex justify-content-center"><div class="spinner-border" role="status"><span class="visually-hidden">Loading...</span></div></div></div>');
        $('body').append($spinner);

        function showSpinner() {
            $spinner.show();
        }

        function hideSpinner() {
            $spinner.hide();
        }

        showSpinner();
        $.ajax({
            url: '/api/Product/getproduct_admin',
            method: 'GET',
            dataType: 'JSON',
            success: function (response) {
                hideSpinner();
                $.each(response, function (index, value) {
                    var $row = $('<tr>');

                    // Xử lý đặc biệt cho key 'id'
                    $.each(value, function (key, value_item_key) {
                            
                            // Các cột dữ liệu khác
                            var $cell = $('<td>').text(value_item_key);
                            $row.append($cell);
                    });
                    $row.attr('id',value.id)
                    // Add icons at the end of each row
                    var $icon1 = $('<i class="fa-solid fa-trash"></i>').click(function () {
                        Swal.fire({
                            title: "Bạn có chắc không?",
                            text: "Bạn sẽ không thể khôi phục được!",
                            icon: "warning",
                            showCancelButton: true,
                            confirmButtonColor: "#3085d6",
                            cancelButtonColor: "#d33",
                            confirmButtonText: "Xóa đi!"
                        }).then((result) => {
                            if (result.isConfirmed) {
                                // Lấy ID từ data-id
                               
                                $.ajax({
                                    url: '/api/Product/deleteproduct_admin/'+ + $row.prop('id'),
                                    method: 'DELETE',
                                    contentType: 'application/json', // Cần thiết khi gửi dữ liệu JSON
                                     // Chuyển đổi đối tượng thành JSON
                                    success: function (res) {
                                        console.log(res);
                                        Swal.fire({
                                            title: "Xóa thành công!",
                                            text: "Sản phẩm đã được xóa.",
                                            icon: "success"
                                        });
                                        $row.hide();
                                    },
                                    error: function(xhr, status, error) {
                                        Swal.fire({
                                            title: "Lỗi!",
                                            text: "Không thể xóa sản phẩm",
                                            icon: "error"
                                        });
                                    }
                                });
                            }
                        });
                    });

                    var $icon2 = $('<i class="fa-solid fa-wrench"></i>').click(function () {
                        // Lấy ID từ data-id
                        var productId = $row.attr('id');
                        window.location.href = '@Url.Action("admin_form_update", "Admin")?id=' + productId;
                    });

                    var $actionsCell = $('<td>').append($icon1).append($icon2);
                    $row.append($actionsCell);
                    $tbody.append($row);
                });

                $('#table_id').DataTable();
            },
            error: function () {
                hideSpinner();
                alert("Có lỗi xảy ra khi lấy dữ liệu!");
            }
        });



    });

    $(document).ready(function () {
        $('.dt-empty').hide()
    })
</script>
