
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="//cdn.datatables.net/2.0.2/css/dataTables.dataTables.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Đăng nhập</title>
    <style>
        #loginPage .container-register {
            width: 1000px;
            margin: 30px;
            padding: 10px;
        }

        #loginPage .bg {
            background-color: #FCF7DC;
            border: 5px solid black;
            border-radius: 3%;
        }

        #loginPage .bg-inform {
            margin: auto;
            width: 600px;
            border: 2px solid black;
            padding: 5px;
        }

        #loginPage .username_password input {
            margin: 15px 10px 0 10px;
            width: 480px;
            height: 40px
        }

        #loginPage .bg-bt {
            height: 50px;
            width: 140px;
            background-color: #f5e07f;
            border: 2px solid black;
            border-radius: 15px;
            margin: 10px 240px;
            transition: background-color 0.3s ease;
        }

            #loginPage .bg-bt:hover {
                background-color: #e8cb43;
                font-weight: bold;
            }

        #loginPage .line {
            height: 3px;
            width: 30%;
            background-color: black;
            margin: -15px auto 0;
        }
    </style>
</head>

<body>
    <section id="loginPage">
        @if (ViewData["Notify"] != null)
        {
        <div class="alert alert-danger">
            @ViewData["Notify"]
        </div>
        }
        <div class="container-register">
            <div class="row">
                <div class="col-4">
                    @* <img src="@Url.Content("~/img/banner/TTN.png")" alt="Logo"> *@
                </div>
                <div class="col-8 bg">
                    <form class="form-login" asp-action="Login" asp-controller="Account" method="post">
                        <div class="row text-center">
                            <div class="logo mt-3">
                                @* <img src="@Url.Content("~/img/logo.png")" alt="Logo"> *@
                            </div>
                            <h1 id="log_in">Đăng nhập</h1>
                        </div>
                        <div class="bg-inform ">
                            <div class="username_password">
                                <label for="username">Tài khoản:</label>
                                <input type="text" name="username" placeholder="username" id="username">
                                <label for="password">Mật khẩu:</label>
                                <input type="password" name="password" placeholder="password" id="password">
                            </div>

                            <div class="row text-center mt-3 fw-bold">
                                <button id="submit" class="border-2 rounded bg-bt">
                                    Đăng nhập
                                </button>
                                <a href="@Url.Action("ForgotPassword", "ForgotPassword")" class="fs-6 mb-2 mt-2 text-decoration-none fw-bold">Quên mật khẩu</a>
                                <span>Hoặc</span>
                                <div class="d-flex justify-content-center">
                                    <div class="line"></div>
                                    <div class="line"></div>
                                </div>
                            </div>

                            <div class="d-flex justify-content-center fs-5 mt-3">
                                <p>Đăng nhập với:</p>
                                @* <a href="" class="ms-3 me-2"><i class="fab fa-facebook"></i></a> *@
                                <a href="" class="ms-3"><i class="fab fa-google"></i></a>
                            </div>

                            <div class="fs-5 d-flex justify-content-end">
                                <div id="register" class="btn border border-dark">
                                    <a href="@Url.Action("Register", "Register")" class="fw-bold text-decoration-none">Đăng ký</a>
                                </div>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </section>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            document.querySelectorAll('a.nav-link').forEach(link => link.classList.remove('active'));
        });
    </script>
</body>

</html>
