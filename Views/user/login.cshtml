<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <title>Đăng nhập</title>
    <style>
        :root {
            --brown: #333;
            --gold: #E2C16C;
            --white: #ffffff;
            --light-gray: #f8f9fa;
        }

        body {
            background-color: var(--white);
            font-family: 'Segoe UI', sans-serif;
        }

        #loginPage .container-register {
            max-width: 900px;
            margin: 50px auto;
            padding: 20px;
        }

        #loginPage .bg {
            background-color: var(--white);
            border: 1px solid #ddd;
            border-radius: 16px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.05);
            padding: 40px;
        }

        #loginPage h1#log_in {
            color: var(--brown);
            font-weight: bold;
        }

        #loginPage .bg-inform {
            background-color: var(--light-gray);
            padding: 30px;
            border-radius: 10px;
            border: 1px solid #e0e0e0;
        }

        #loginPage .username_password label {
            font-weight: 600;
            color: var(--brown);
        }

        #loginPage .username_password input {
            margin: 8px 0 20px;
            width: 100%;
            height: 45px;
            padding: 8px 12px;
            border: 1px solid #ccc;
            border-radius: 8px;
            transition: border-color 0.2s;
        }

            #loginPage .username_password input:focus {
                border-color: var(--gold);
                outline: none;
            }

        #loginPage .bg-bt {
            background-color: var(--gold);
            color: white;
            font-weight: 600;
            padding: 10px 30px;
            border-radius: 25px;
            border: none;
            margin: 10px 0;
            transition: background-color 0.3s ease;
        }

            #loginPage .bg-bt:hover {
                background-color: #cda94b;
            }

        #loginPage .line {
            height: 2px;
            width: 30%;
            background-color: var(--gold);
            margin: 10px auto;
        }

        #loginPage .form-login a {
            color: var(--brown);
            font-weight: 500;
        }

            #loginPage .form-login a:hover {
                text-decoration: underline;
            }

        #loginPage #register {
            background-color: var(--white);
            border: 1px solid var(--gold);
            padding: 6px 16px;
            border-radius: 20px;
            transition: background-color 0.3s;
        }

            #loginPage #register:hover {
                background-color: var(--gold);
            }

            #loginPage #register a {
                color: var(--brown);
                font-weight: 600;
                text-decoration: none;
            }

        .alert {
            max-width: 900px;
            margin: 30px auto 0;
        }
    </style>
</head>

<body>
    <section id="loginPage">
        @if (ViewData["Notify"] != null)
        {
            <div class="alert alert-danger">
                @ViewData["Notify"]
            </div>
        }
        <div class="container-register">
            <div class="row justify-content-center">
                <div class="col-lg-10 bg">
                    <form class="form-login" asp-action="Login" asp-controller="Account" method="post">
                        <div class="text-center mb-4">
                            <h1 id="log_in">Đăng nhập</h1>
                        </div>
                        <div class="bg-inform">
                            <div class="username_password">
                                <label for="username">Tài khoản:</label>
                                <input type="text" name="username" placeholder="Nhập tài khoản" id="username" />
                                <label for="password">Mật khẩu:</label>
                                <input type="password" name="password" placeholder="Nhập mật khẩu" id="password" />
                            </div>

                            <button id="submit" class="bg-bt w-100">Đăng nhập</button>

                            <div class="text-center mt-3">
                                <a href="@Url.Action("ForgotPassword", "ForgotPassword")">Quên mật khẩu</a>
                                <p class="mt-2 mb-1">Hoặc</p>
                                <div class="line"></div>
                            </div>

                            <div class="d-flex justify-content-center align-items-center mt-2">
                                <span class="me-2">Đăng nhập với:</span>
                                <a href="/login/google-login" class="fs-4 text-danger"><i class="fab fa-google"></i></a>
                            </div>

                            <div class="d-flex justify-content-end mt-4">
                                <div id="register">
                                    <a href="@Url.Action("Register", "Register")">Đăng ký</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</body>

</html>
