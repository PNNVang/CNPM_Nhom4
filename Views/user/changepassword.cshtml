

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Đổi mật khẩu</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/change-pass.css" type="text/css">
    <style>
        * {
            padding: 0;
            margin: 0;
            box-sizing: border-box;
            font-size: 14px;
            font-family: Tahoma, Arial, sans-serif;
        }

        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f4f4f4;
        }

        form {
            display: flex;
            flex-direction: column;
            width: 400px;
            padding: 20px;
            border: 2px solid darkgoldenrod;
            box-shadow: 2px 2px 5px darkgoldenrod;
            background-color: #fcf7dc;
            ;
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
            font-weight: 500;
        }

        .form-group {
            margin-bottom: 15px;
        }

        label {
            font-weight: 400;
            margin-bottom: 5px;
            display: inline-block;
        }

        input[type="password"] {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 14px;
        }

        #btn {
            text-align: center;
        }

        button {
            background-color: #f5e07f;
            border: 2px solid black;
            padding: 10px;
            border-radius: 5px;
            cursor: pointer;
            margin-top: 20px;
        }

            button:hover {
                background-color: #e8cb43;
                font-weight: bold;
            }
    </style>
</head>
<body>
    <div>
        @if (ViewData["Notify"] != null)
        {
        <div class="alert alert-danger">
            @ViewData["Notify"]
        </div>
        }
        <form asp-action="ChangePassword" asp-controller="Account" method="post">
            <h1>Đổi Mật Khẩu</h1>

            <div class="form-group">
                <label for="currentpassword">Mật khẩu cũ</label>
                <input type="password" name="currentpassword" placeholder="Mật khẩu cũ" id="currentpassword">
            </div>

            <div class="form-group">
                <label for="newpassword">Mật khẩu mới</label>
                <input type="password" name="newpassword" placeholder="Mật khẩu mới" id="newpassword">
            </div>

            <div class="form-group">
                <label for="repeatpassword">Nhập lại mật khẩu mới</label>
                <input type="password" name="repeatpassword" placeholder="Mật khẩu mới" id="repeatpassword">
            </div>

            <div class="form-group" id="btn">
                <button type="submit">Đổi mật khẩu</button>
            </div>
        </form>
    </div>
</body>
</html>
