
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="//cdn.datatables.net/2.0.2/css/dataTables.dataTables.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Quên Mật Khẩu</title>
    <style>

        form {
            border: double 2px darkgoldenrod;
            margin-left: 450px;
            margin-top: 100px;
            width: 500px;
            height: 300px;
            box-shadow: darkgray 2px 2px;
            border-radius: 5px;
            text-align: center;
            background-color: #fcf7dc;
        }

        button {
            margin-top: 20px;
            width: 150px;
            height: 40px;
            background-color: #f5e07f;
            cursor: pointer;
            border-radius: 5px;
        }

            button:hover {
                background-color: #e8cb43;
                font-weight: bold;
            }

        .item {
            margin-top: 30px;
        }

            .item input {
                height: 40px;
                border-radius: 15px;
            }

        #btn {
            display: flex;
            flex-direction: column;
            gap: 20px;
            margin-top: 10px;
        }

        .line {
            height: 3px;
            width: 50%;
            background-color: black;
            margin: auto;
            margin-top: 15px;
        }
    </style>
</head>
<body>
    <div>
        @if (ViewData["Notify"] != null)
        {
        <div class="alert alert-danger">
            @ViewData["Notify"]
        </div>
        }
        <form asp-action="ForgotPassword" asp-controller="Account" method="post">
            <div class="title">
                <h1 class="mt-3">Quên mật khẩu</h1>
            </div>
            <div class="item">
                <input type="email" name="email" id="email" placeholder="Nhập email" style="width: 300px;">
            </div>
            <div>
                <button type="submit">Xác nhận</button>
            </div>
            <div class="row text-center mt-6 fw-bold">
                <div class="d-flex justify-content-center">
                    <div class="line"></div>
                </div>
            </div>
            <div id="btn">
                <a href="@Url.Action("Login", "Account")" id="login">Đăng nhập</a>
                <a href="@Url.Action("Register", "Account")" id="register">Đăng ký</a>
            </div>
        </form>
    </div>
</body>
</html>
